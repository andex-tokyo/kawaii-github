{
    "manifest_version": 3,
    "name": "GitHub Contribution Color Changer",
    "version": "1.0",
    "description": "Change the color of the GitHub contribution graph.",
    "permissions": ["storage", "tabs", "activeTab","scripting"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
      "service_worker": "./dist/background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://github.com/*"],
        "js": ["./dist/contentScript.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  